<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="?attr/colorButtonNormal"
        android:visibility="visible"
        tools:visibility="visible">

    <Button
            android:id="@+id/btnAbrirGaleria"
            android:layout_width="368dp"
            android:layout_height="49dp"
            android:background="@drawable/boton_abrir_galeria"
            android:text="Galeria"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516" app:layout_constraintHorizontal_bias="0.488"/>

    <Button
            android:id="@+id/btnAbrirCamara"
            android:layout_width="151dp"
            android:layout_height="31dp"
            android:background="@drawable/boton_abrir_camara"
            android:text="TOMAR FOTO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.422"/>
    <VideoView
            android:id="@+id/video"
            android:layout_width="324dp"
            android:layout_height="195dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" app:layout_constraintVertical_bias="0.847"/>
    <Button
            android:id="@+id/btnGrabarVideo"
            android:layout_width="147dp"
            android:layout_height="28dp"
            android:background="@drawable/boton_abrir_camara"
            android:text="Grabar Video"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.977"/>
    <ImageView
            android:id="@+id/foto"
            android:layout_width="318dp"
            android:layout_height="193dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.065"
            tools:srcCompat="@tools:sample/avatars"/>

</androidx.constraintlayout.widget.ConstraintLayout>